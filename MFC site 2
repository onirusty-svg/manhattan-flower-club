    async function onConfigChange(config) {
      const customFont = config.font_family || defaultConfig.font_family;
      const baseFontStack = 'serif';
      const baseSize = config.font_size || defaultConfig.font_size;
      
      const backgroundColor = config.background_color || defaultConfig.background_color;
      const goldAccent = config.gold_accent || defaultConfig.gold_accent;
      const lightGold = config.light_gold || defaultConfig.light_gold;
      const textColor = config.text_color || defaultConfig.text_color;
      const secondaryText = config.secondary_text || defaultConfig.secondary_text;
      
      // Apply background color
      document.body.style.backgroundColor = backgroundColor;
      
      // Apply font to serif elements
      const serifElements = document.querySelectorAll('.serif-font');
      serifElements.forEach(el => {
        el.style.fontFamily = `${customFont}, ${baseFontStack}`;
      });
      
      // Apply gold accent colors
      const goldTextElements = document.querySelectorAll('.text-gold');
      goldTextElements.forEach(el => {
        el.style.color = goldAccent;
      });
      
      // Update text color
      document.body.style.color = textColor;
      
      // Apply font sizes proportionally
      document.getElementById('hero-headline').style.fontSize = `${baseSize * 4.5}px`;
      document.getElementById('hero-subheadline').style.fontSize = `${baseSize * 1.125}px`;
      document.getElementById('brand-title').style.fontSize = `${baseSize * 3.5}px`;
      document.getElementById('brand-text').style.fontSize = `${baseSize * 1.125}px`;
      document.getElementById('collection-title').style.fontSize = `${baseSize * 3}px`;
      document.getElementById('membership-title').style.fontSize = `${baseSize * 3.5}px`;
      document.getElementById('membership-text').style.fontSize = `${baseSize * 1.125}px`;
      document.getElementById('concierge-title').style.fontSize = `${baseSize * 3.5}px`;
      document.getElementById('concierge-text').style.fontSize = `${baseSize * 1.125}px`;
      document.getElementById('journal-title').style.fontSize = `${baseSize * 3.5}px`;
      document.getElementById('journal-text').style.fontSize = `${baseSize * 1.125}px`;
      
      // Apply button colors
      const primaryButtons = document.querySelectorAll('.btn-primary');
      primaryButtons.forEach(btn => {
        btn.style.background = `linear-gradient(135deg, ${goldAccent} 0%, ${lightGold} 50%, ${goldAccent} 100%)`;
        btn.style.color = backgroundColor;
      });
      
      const secondaryButtons = document.querySelectorAll('.btn-secondary');
      secondaryButtons.forEach(btn => {
        btn.style.borderColor = goldAccent;
        btn.style.color = goldAccent;
      });
      
      // Update footer links
      const footerLinks = document.querySelectorAll('.footer-link');
      footerLinks.forEach(link => {
        link.style.color = goldAccent;
      });
      
      // Update text content
      document.getElementById('hero-headline').textContent = config.hero_headline || defaultConfig.hero_headline;
      document.getElementById('hero-subheadline').textContent = config.hero_subheadline || defaultConfig.hero_subheadline;
      document.getElementById('hero-primary-btn').textContent = config.hero_primary_cta || defaultConfig.hero_primary_cta;
      document.getElementById('hero-secondary-btn').textContent = config.hero_secondary_cta || defaultConfig.hero_secondary_cta;
      document.getElementById('brand-title').textContent = config.brand_title || defaultConfig.brand_title;
      document.getElementById('brand-text').textContent = config.brand_text || defaultConfig.brand_text;
      document.getElementById('brand-cta-btn').textContent = config.brand_cta || defaultConfig.brand_cta;
      document.getElementById('collection-title').textContent = config.collection_title || defaultConfig.collection_title;
      document.getElementById('collection-cta-btn').textContent = config.collection_cta || defaultConfig.collection_cta;
      document.getElementById('membership-title').textContent = config.membership_title || defaultConfig.membership_title;
      document.getElementById('membership-text').textContent = config.membership_text || defaultConfig.membership_text;
      document.getElementById('membership-cta-btn').textContent = config.membership_cta || defaultConfig.membership_cta;
      document.getElementById('concierge-title').textContent = config.concierge_title || defaultConfig.concierge_title;
      document.getElementById('concierge-text').textContent = config.concierge_text || defaultConfig.concierge_text;
      document.getElementById('concierge-cta-btn').textContent = config.concierge_cta || defaultConfig.concierge_cta;
      document.getElementById('journal-title').textContent = config.journal_title || defaultConfig.journal_title;
      document.getElementById('journal-text').textContent = config.journal_text || defaultConfig.journal_text;
      document.getElementById('journal-cta-btn').textContent = config.journal_cta || defaultConfig.journal_cta;
    }

